<h1>Sign Up</h1>
<form id="signupForm" action="/sign-up" method="POST">
    <div>
        <label for="email">E-Mail:</label>
        <input id="email" name="email" type="email" value="{{data.email}}" required>
        {{#if errors.email}}
            <div style="color: red;">{{errors.email}}</div>
        {{/if}}
    </div>
    <div>
        <label for="first_name">First Name</label>
        <input id="first_name" name="first_name" type="text" value="{{data.first_name}}" required/>
    </div>
    <div>
        <label for="family_name">Family Name</label>
        <input id="family_name" name="family_name" type="text" value="{{data.family_name}}" required/>
    </div>
    <div>
        <label for="password">Password:</label>
        <input id="password" name="password" type="password" required>
        {{#if errors.password}}
            <div style="color: red;">{{errors.password}}</div>
        {{/if}}
    </div>
    <div>
        <label for="confirm_password">Confirm Password:</label>
        <input id="confirm_password" name="confirm_password" type="password" required>
        {{#if errors.confirm_password}}
            <div style="color: red;">{{errors.confirm_password}}</div>
        {{/if}}
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">  <!-- CSRF Token hinzugefÃ¼gt -->
    <button type="submit">Sign Up</button>
</form>
<p>Already have an account? <a href="/login">Log In</a></p>
